@inherits LayoutComponentBase

<div class="container-fluid vh-100 p-0 d-flex flex-column">
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom px-4">
        <a class="navbar-brand d-flex align-items-center" href="/dashboard">
            <img src="data/logoBG.png" alt="Synctaker Logo" style="max-width: 50px; height: auto;" />
            <span class="ms-2 fw-bold text-custom">synctaker</span>
        </a>

        <div class="collapse navbar-collapse">
            <ul class="navbar-nav fw-bold ms-auto me-auto justify-content-around w-100">
                <li class="nav-item"><a class="nav-link text-danger" href="/dashboard">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link text-danger" href="/projects">Projects</a></li>
                <li class="nav-item"><a class="nav-link text-danger" href="/tasks">Tasks</a></li>
                <li class="nav-item"><a class="nav-link text-danger" href="/team">Team management</a></li>
            </ul>

            <div class="d-flex align-items-center">
@*                 <a href="#" class="me-3">
                    <img src="data/settings.png" alt="Settings" style="width: 30px; height: auto;" />
                </a> *@
                <a href="#">
                    <img src="data/signOut.png" alt="Profile" style="width: 30px; height: auto;" />
                </a>
            </div>
        </div>
    </nav>

    <!-- Begin of page -->
    <div class="flex-grow-1 p-4">
        @Body
    </div>

    <!-- Current Date and Time -->
    <div class="position-fixed bottom-0 end-0 p-3 bg-white text-dark shadow-sm" style="z-index: 1050;">
        @currentDateTime
    </div>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private string currentDateTime;

    protected override void OnInitialized()
    {
        UpdateDateTime();
    }

    private void UpdateDateTime()
    {
        currentDateTime = DateTime.Now.ToString("dd.MM.yyyy");
        StateHasChanged();
    }
}
